<div class="@shellClass" style="@Style">

    @if (ShellHeader != null)
    {
        <header class="shell-header">

            <div class="shell-header-content">
                @if (LayoutManagementService.PinnedSidebar && !LayoutManagementService.UnitedSidebar)
                {
                    <div class="sidebar-helper"></div>
                }

                @ShellHeader
                 
                @if (LayoutManagementService.PinnedSidebar && LayoutManagementService.UnitedSidebar)
                {
                    <div class="united-sidebar-helper"></div>
                }
            </div>

        </header>
    }


    <main class="shell-body">
        @ShellBody
    </main>

    <main class="shell-footer">
        @ShellFooter
    </main>

</div>
