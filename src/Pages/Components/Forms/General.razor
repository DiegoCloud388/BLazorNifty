                        </MudMenu>
     
     <MudTextField T="string" Class="input-left-border-0" Variant="Variant.Outlined" Margin="Margin.Dense"/>
</div>

                <div class="row-start mb-3">
                    <MudTextField T="string" Class="input-right-border-0" Variant="Variant.Outlined" Margin="Margin.Dense"/>

     <MudMenu Class="right-dropdown-addition" DisableElevation=true EndIcon="@Icons.Filled.KeyboardArrowDown" Label="Dropdown" Color="Color.Warning" Variant="Variant.Filled" AnchorOrigin="Origin.BottomLeft" TransformOrigin="Origin.TopLeft">
                            <MudMenuItem>Action</MudMenuItem>
                            <MudMenuItem>Another action</MudMenuItem>
                            <MudMenuItem>Somethind else here</MudMenuItem>
