@page "/forms/general"


<PageTitle>General</PageTitle>

<PageShell Rounded="false" Overlapping="false">
    <ShellHeader>
        <MudBreadcrumbs Items="_items" Separator=">"></MudBreadcrumbs>
        <MudText Typo="Typo.h2" Class="page-title" GutterBottom="true">General</MudText>
        <MudText Typo="Typo.body1" Class="mb-2 page-description">General form-control live preview. You can copy our examples and paste them into your project!</MudText>
    </ShellHeader>

    <ShellBody>
        <MudText Typo="Typo.h3" Class="font-weight-bold" GutterBottom="true">Form Layouts</MudText>

         <MudCard Class="mb-4">
             <MudCardContent>
                <MudText Typo="Typo.h5" Class="mb-2 font-weight-bold">Inline form</MudText>
                    <MudGrid Spacing="2">

                        <MudItem xs="12" sm="6" lg="4" xl="2">
                            <MudTextField T="string" Margin="Margin.Dense" Color="Color.Primary" Placeholder="Email" Variant="Variant.Outlined" />
                        </MudItem>

                        <MudItem xs="12" sm="6" lg="4" xl="2">
                            <MudTextField T="string" Margin="Margin.Dense" Color="Color.Primary" Placeholder="Password" Variant="Variant.Outlined" />
                        </MudItem>

                         <MudItem xs="12" sm="6" lg="2" xl="1" Class="align-self-center">
                              <MudCheckBox T="bool" Dense=true Size="Size.Small" Label="Remember Me"></MudCheckBox>        
                         </MudItem>

                         <MudItem xs="12" sm="6" lg="3" xl="2" Class="align-self-center">
                            <MudButton Variant="Variant.Filled" Color="Color.Primary">Confirm Identity</MudButton>      
                         </MudItem>               
                    </MudGrid>       
            </MudCardContent>
        </MudCard>      


          <MudGrid Spacing="3">
        <MudItem xs="12" sm="12" lg="6" xl="6">
            <MudCard>
    <MudCardContent>
         <MudText Typo="Typo.h5" Class="mb-3 mud-weight-bold font-weight-bold">Block styled form</MudText>

        <MudGrid Spacing="2">
            <MudItem xs="12" sm="6" lg="6" xl="6">
                <MudStack Spacing="0">
                    <MudText Typo="Typo.caption"><span class="light-label">Email</span></MudText>
                    <MudTextField T="string" Margin="Margin.Dense" Color="Color.Primary" Variant="Variant.Outlined" />
                </MudStack>               
            </MudItem>

            <MudItem xs="12" sm="6" lg="6" xl="6">
                <MudStack Spacing="0">
                    <MudText Typo="Typo.caption"><span class="light-label">Password</span></MudText>
                    <MudTextField T="string" Margin="Margin.Dense" Color="Color.Primary" Variant="Variant.Outlined" />
                </MudStack>               
            </MudItem>

            <MudItem xs="12">
                <MudStack Spacing="0">
                    <MudText Typo="Typo.caption"><span class="light-label">Address</span></MudText>
                    <MudTextField T="string" Margin="Margin.Dense" Color="Color.Primary" Variant="Variant.Outlined" />
                </MudStack>               
            </MudItem>

            <MudItem xs="12">
                <MudStack Spacing="0">
                    <MudText Typo="Typo.caption"><span class="light-label">Address 2</span></MudText>
                    <MudTextField T="string" Margin="Margin.Dense" Color="Color.Primary" Variant="Variant.Outlined" />
                </MudStack>               
            </MudItem>

             <MudItem xs="12" sm="6" lg="6" xl="6">
                <MudStack Spacing="0">
                    <MudText Typo="Typo.caption"><span class="light-label">City</span></MudText>
                    <MudTextField T="string" Margin="Margin.Dense" Color="Color.Primary" Variant="Variant.Outlined" />
                </MudStack>               
            </MudItem>

             <MudItem xs="12" sm="4" lg="4" xl="4">

                <MudStack Spacing="0">
                    <MudText Typo="Typo.caption"><span class="light-label">State</span></MudText>
                    <MudSelect Margin="Margin.Dense" PopoverClass="rounded" Dense=true AnchorOrigin="Origin.BottomCenter" T="string" Placeholder="Choose..." Variant="Variant.Outlined">
                        <MudSelectItem Value="@("State 1")" />
                        <MudSelectItem Value="@("State 2")" />
                        <MudSelectItem Value="@("State 3")" />
                    </MudSelect>
                </MudStack>               
            </MudItem>

            <MudItem xs="12" sm="2" lg="2" xl="2">
                <MudStack Spacing="0">
                    <MudText Typo="Typo.caption"><span class="light-label">Zip</span></MudText>
                    <MudTextField T="string" Margin="Margin.Dense" Color="Color.Primary" Variant="Variant.Outlined" />
                </MudStack>               
            </MudItem>

             <MudItem>
                  <MudStack Justify="Justify.FlexStart" AlignItems="AlignItems.Start">
                       <MudCheckBox Class="ml-n1" T="bool" Dense=true Size="Size.Small" Label="Remember Me"></MudCheckBox>   
                
                       <MudButton Variant="Variant.Filled" Color="Color.Primary">Sign in</MudButton>
                 </MudStack>
             </MudItem>
       
        </MudGrid>       
    </MudCardContent>
</MudCard>
        </MudItem>  
        

        <MudItem xs="12" sm="12" lg="6" xl="6">
            <MudCard>
    <MudCardContent>
         <MudText Typo="Typo.h5" Class="mb-3 font-weight-bold">Horizontal form</MudText>
        
         <MudStack Class="mb-5" Spacing="4">

             <MudStack Row=true AlignItems="AlignItems.Center">
                  <MudText Style="width:85px" Typo="Typo.caption"><span class="light-label">Email</span></MudText>
                  <MudTextField T="string" Margin="Margin.Dense" Color="Color.Primary" Variant="Variant.Outlined" />
             </MudStack>
                        
            <MudStack Row=true AlignItems="AlignItems.Center">
                  <MudText Style="width:85px" Typo="Typo.caption"><span class="light-label">Password</span></MudText>
                  <MudTextField T="string" Margin="Margin.Dense" Color="Color.Primary" Variant="Variant.Outlined" />
             </MudStack>

              <MudStack Row=true AlignItems="AlignItems.Center">
                  <MudText Style="width:85px" Typo="Typo.caption"><span class="light-label">Address</span></MudText>
                  <MudTextField Placeholder="1234 Main St" T="string" Margin="Margin.Dense" Color="Color.Primary" Variant="Variant.Outlined" />
             </MudStack>

             <MudStack Row=true AlignItems="AlignItems.Center">
                  <MudText Style="width:85px" Typo="Typo.caption"><span class="light-label">Address 2</span></MudText>
                  <MudTextField Placeholder="Apartment, studio, or floor" T="string" Margin="Margin.Dense" Color="Color.Primary" Variant="Variant.Outlined" />
             </MudStack>

             <MudStack Row=true AlignItems="AlignItems.Center">
                  <MudText Style="width:85px" Typo="Typo.caption"><span class="light-label">City</span></MudText>
                  <MudTextField T="string" Margin="Margin.Dense" Color="Color.Primary" Variant="Variant.Outlined" />
             </MudStack>

             <MudStack Row=true AlignItems="AlignItems.Center">
                  <div Style="width:85px"></div>
                   <MudCheckBox Class="ml-n1" T="bool" Dense=true Size="Size.Small" Label="Remember Me"></MudCheckBox>   
             </MudStack>

              <MudButton Variant="Variant.Filled" Style="width:85px" Color="Color.Primary">Sign in</MudButton>
        
         </MudStack>
         
    </MudCardContent>
</MudCard>

        </MudItem>
        </MudGrid>
    </ShellBody>
</PageShell>

@code {
    private List<BreadcrumbItem> _items = new List<BreadcrumbItem>
    {
        new BreadcrumbItem("Home", href: "#"),
        new BreadcrumbItem("Forms", href: "#"),
        new BreadcrumbItem("General", href: null, disabled: true)
    };



}