        <EditForm EditContext="editContext" OnValidSubmit="OnValidSubmit">
        <DataAnnotationsValidator/>
        <MudCard>
             <MudCardContent>
                <MudText Typo="Typo.h5" Class="mb-2 font-weight-bold">Validation States</MudText>
                    <MudGrid Spacing="2">

                        <MudItem xs="12" sm="6" lg="4" xl="4">
                            <MudStack Spacing="0">
                                <MudText Typo="Typo.caption"><span class="light-label">First name</span><MudIcon Icon="@Icons.Material.Filled.Stars" Class="horizontal-required-mark" Color="Color.Error"/></MudText>
                                     <MudTextField @bind-Value="commandCreate.FirtName" Immediate=true For="@(() => commandCreate.FirtName)" Margin="Margin.Dense" Variant="Variant.Outlined" 
                                    AdornmentColor="Color.Success" Adornment="GetAdornmentIfFieldIsValid(nameof(commandCreate.FirtName))" AdornmentIcon="@Icons.Filled.Check"/>
                            </MudStack>    
                        </MudItem>

                        <MudItem xs="12" sm="6" lg="4" xl="4">
                            <MudStack Spacing="0">
                                <MudText Typo="Typo.caption"><span class="light-label">Last name</span><MudIcon Icon="@Icons.Material.Filled.Stars" Class="horizontal-required-mark" Color="Color.Error"/></MudText>
                                <MudTextField @bind-Value="commandCreate.LastName" Immediate=true For="@(() => commandCreate.LastName)" Margin="Margin.Dense" Variant="Variant.Outlined"
                                    AdornmentColor="Color.Success" Adornment="GetAdornmentIfFieldIsValid(nameof(commandCreate.LastName))" AdornmentIcon="@Icons.Filled.Check"/>
                            </MudStack>    
                        </MudItem>

                    <MudItem xs="12" sm="6" lg="4" xl="4">
                        <MudStack Spacing="0">
                            <MudText Typo="Typo.caption"><span class="light-label">User name</span><MudIcon Icon="@Icons.Material.Filled.Stars" Class="horizontal-required-mark" Color="Color.Error"/></MudText>
                            
                            <div class="row-start">
                            
                                 <div class="left-icon-addition">    
                                  <MudIcon Color="Color.Default" Icon="@Icons.Filled.AlternateEmail"/>
                                 </div>
     
                            
                                <MudTextField @bind-Value="commandCreate.UserName" For="@(() => commandCreate.UserName)" 
                                        Margin="Margin.Dense" Variant="Variant.Outlined" Immediate=true Class="input-left-border-radius-0 helper-text-start" HelperText="bla bla"
                                         AdornmentColor="Color.Success" Adornment="GetAdornmentIfFieldIsValid(nameof(commandCreate.UserName))" AdornmentIcon="@Icons.Filled.Check"/>                         
                            </div>
                        </MudStack>
                    </MudItem>

                      <MudItem xs="12" sm="6" lg="6" xl="6">
                            <MudStack Spacing="0">
                                <MudText Typo="Typo.caption"><span class="light-label">City</span><MudIcon Icon="@Icons.Material.Filled.Stars" Class="horizontal-required-mark" Color="Color.Error"/></MudText>
                                 <MudTextField @bind-Value="commandCreate.City" For="@(() => commandCreate.City)"
                                              Margin="Margin.Dense" Variant="Variant.Outlined" Immediate=true
                                     AdornmentColor="Color.Success" Adornment="GetAdornmentIfFieldIsValid(nameof(commandCreate.City))" AdornmentIcon="@Icons.Filled.Check"/>
                            </MudStack>    
                        </MudItem>


                        <MudItem xs="12" sm="6" lg="3" xl="3">
                            <MudStack Spacing="0">
                                <MudText Typo="Typo.caption"><span class="light-label">State</span><MudIcon Icon="@Icons.Material.Filled.Stars" Class="horizontal-required-mark" Color="Color.Error" /></MudText>

                                @if (IsFieldValid(nameof(commandCreate.StateId)))
                                {
                                    <div class="d-flex flex-row shrink-select">
                                        <MudSelect Margin="Margin.Dense" ValueChanged="((value) => StateChanged(value, nameof(commandCreate.StateId)))"
                                               Value="commandCreate.StateId" For="@(() => commandCreate.StateId)"
                                               PopoverClass="rounded" Dense=true AnchorOrigin="Origin.BottomCenter"
                                               T="int?" Variant="Variant.Outlined">
                                            <MudSelectItem Value="(int?)1">Czech republic</MudSelectItem>
                                            <MudSelectItem Value="(int?)2">Slovakia</MudSelectItem>
                                        </MudSelect>
                                        <MudIcon Icon="@Icons.Filled.Check" Class="ml-n15 align-self-center" Color="Color.Success"></MudIcon>
                                    </div>
                                }
                                else
                                {

                                    <MudSelect Margin="Margin.Dense" For="@(() => commandCreate.StateId)"
                                           PopoverClass="rounded" ValueChanged="((value) => StateChanged(value, nameof(commandCreate.StateId)))"
                                           Value="commandCreate.StateId" Dense=true AnchorOrigin="Origin.BottomCenter"
                                           T="int?" Variant="Variant.Outlined">

                                        <MudSelectItem Value="(int?)1">Czech republic</MudSelectItem>
                                        <MudSelectItem Value="(int?)2">Slovakia</MudSelectItem>
                                    </MudSelect>
                                }

                            </MudStack>
                        </MudItem>

                         <MudItem xs="12" sm="6" lg="3" xl="3">
                            <MudStack Spacing="0">
                                <MudText Typo="Typo.caption"><span class="light-label">Zip</span><MudIcon Icon="@Icons.Material.Filled.Stars" Class="horizontal-required-mark" Color="Color.Error"/></MudText>
                                <MudTextField @bind-Value="commandCreate.Zip" Immediate=true For="@(() => commandCreate.Zip)"
                                              Margin="Margin.Dense" Variant="Variant.Outlined" 
                                     AdornmentColor="Color.Success" Adornment="GetAdornmentIfFieldIsValid(nameof(commandCreate.Zip))" AdornmentIcon="@Icons.Filled.Check"/>
                            </MudStack>    
                        </MudItem>

                        <MudItem xs="12" sm="6" lg="3" xl="3">
                              <MudStack Justify="Justify.FlexStart" AlignItems="AlignItems.Start">
                                  <MudStack Row=true AlignItems="AlignItems.Center">

                                    @if(IsFieldValid(nameof(commandCreate.IsGdprConfirmed)))
                                    {
                                        <div class="ml-n1-half">
                                            <MudCheckBox Class="checkbox-success" Dense=true Size="Size.Small"
                                            Label="Agree to terms and conditions" @bind-Checked="commandCreate.IsGdprConfirmed" For="@(() => commandCreate.IsGdprConfirmed)"/> 
                                        </div>
                                       
                                    }
                                    else
                                    {
                                        <div class="ml-n1-half">
                                            <MudCheckBox Dense=true Size="Size.Small" Label="Agree to terms and conditions" 
                                            @bind-Checked="commandCreate.IsGdprConfirmed" For="@(() => commandCreate.IsGdprConfirmed)" />
                                        </div>
                                       
                                    }
                                  </MudStack>
                                             
                                   <MudButton Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Primary">Submit form</MudButton>
                             </MudStack>
                         </MudItem>       
                                                
                </MudGrid>       
            </MudCardContent>
        </MudCard> 
         </EditForm>

    </ShellBody>
</PageShell>




