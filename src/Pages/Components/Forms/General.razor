     <MudTextField T="string" Placeholder="Earning" Class="input-left-border-radius-0 input-right-border-radius-0" Variant="Variant.Outlined" Margin="Margin.Dense"/>

     <MudText Class="right-text-addition">.00</MudText>

</div>

<div class="row-start mb-3">

     <MudTextField T="string" Placeholder="Username" Class="input-right-border-radius-0" Variant="Variant.Outlined" Margin="Margin.Dense"/>

 <div class="middle-icon-addition">
            <MudIcon Icon="@Icons.Filled.AlternateEmail"/>
         </div>

          <MudTextField T="string" Placeholder="Server" Class="input-left-border-radius-0" Variant="Variant.Outlined" Margin="Margin.Dense"/>
</div>
            </MudItem>

        </MudGrid>       
    </MudCardContent>
</MudCard>
        </MudItem>  
        

        <MudItem xs="12" sm="12" lg="6" xl="6">
            <MudCard>
                <MudCardContent>
                     <MudText Typo="Typo.h5" Class="mb-3 font-weight-bold">Buttons Addons</MudText>
        
                <MudGrid Spacing="2">
            <MudItem xs="12" sm="12" lg="12" xl="12">


<div class="row-start mb-3">
     <MudButton Class="left-button-addition" DisableElevation=true Color="Color.Warning" Variant="Variant.Filled">Button</MudButton>
     
     <MudTextField T="string" Class="input-left-border-0" Variant="Variant.Outlined" Margin="Margin.Dense"/>
</div>


<div class="row-start mb-3">  
     <MudTextField T="string" Placeholder="Recipient's username" Class="input-right-border-0" Variant="Variant.Outlined" Margin="Margin.Dense"/>
      
      <MudButton Class="right-button-addition" DisableElevation=true Color="Color.Info" Variant="Variant.Filled">Button</MudButton>
</div>

<div class="row-start mb-3">

       <MudButton Class="left-button-addition" DisableElevation=true Color="Color.Tertiary" Variant="Variant.Filled">Button</MudButton>
     
         <MudButton Class="middle-button-addition" DisableElevation=true Color="Color.Tertiary" Variant="Variant.Filled">Button</MudButton>

     <MudTextField T="string" Class="input-left-border-0" Variant="Variant.Outlined" Margin="Margin.Dense"/>
</div>

<div class="row-start mb-3">      

     <MudTextField T="string" Class="input-right-border-0" Variant="Variant.Outlined" Margin="Margin.Dense"/>

     <MudButton Class="middle-button-addition" DisableElevation=true Color="Color.Success" Variant="Variant.Filled">Button</MudButton>
     
         <MudButton Class="right-button-addition" DisableElevation=true Color="Color.Success" Variant="Variant.Filled">Button</MudButton>
</div>


            </MudItem>

        </MudGrid>       
         
                </MudCardContent>
            </MudCard>

        </MudItem>
        </MudGrid>

          <MudGrid Spacing="2" Class="mb-2">
        <MudItem xs="12" sm="12" lg="6" xl="6">
            <MudCard>
    <MudCardContent>
         <MudText Typo="Typo.h5" Class="mb-3 mud-weight-bold font-weight-bold">Checkboxes and radio addons</MudText>

        <MudGrid Spacing="2">
            <MudItem xs="12" sm="12" lg="12" xl="12">


<div class="row-start mb-3">
         <div class="left-checkbox-addition">    
          <MudCheckBox T="bool" Dense=true Color="Color.Primary" UnCheckedColor="Color.Default" Size="Size.Small" />
           </div>

     <MudTextField T="string"  Class="input-left-border-radius-0" Variant="Variant.Outlined" Margin="Margin.Dense"/>
</div>

<MudRadioGroup T="int">
    <div class="row-start mb-3">
             <div class="left-radio-addition">    
                    <MudRadio Option="1" Color="Color.Primary" UnCheckedColor="Color.Default" Dense=true Size="Size.Small" />
               </div>

         <MudTextField T="string" Class="input-left-border-radius-0" Variant="Variant.Outlined" Margin="Margin.Dense"/>
    </div>

    <div class="row-start mb-3">
             <div class="left-radio-addition">    
                    <MudRadio Option="2" Color="Color.Primary" UnCheckedColor="Color.Default" Dense=true Size="Size.Small" />
               </div>
         <MudTextField T="string" Class="input-left-border-radius-0" Variant="Variant.Outlined" Margin="Margin.Dense"/>
    </div>
</MudRadioGroup>

            </MudItem>

        </MudGrid>       
    </MudCardContent>
</MudCard>
        </MudItem>  
        

        <MudItem xs="12" sm="12" lg="6" xl="6">
            <MudCard>
                <MudCardContent>
                     <MudText Typo="Typo.h5" Class="mb-3 font-weight-bold">Dropdowns Addons</MudText>
        
                <MudGrid Spacing="2">
            <MudItem xs="12" sm="12" lg="12" xl="12">

                <div class="row-start mb-3">
     <MudMenu Class="left-dropdown-addition" DisableElevation=true EndIcon="@Icons.Filled.KeyboardArrowDown" Label="Dropdown" Color="Color.Error" Variant="Variant.Filled" AnchorOrigin="Origin.BottomLeft" TransformOrigin="Origin.TopLeft">
