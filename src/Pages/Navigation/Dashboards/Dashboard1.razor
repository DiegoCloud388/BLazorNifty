@page "/dashboard-1"
@page "/"

<PageTitle>Dashboard 1</PageTitle>

<PageShell Rounded="false" Overlapping="false">
    <ShellHeader>
        <MudBreadcrumbs Items="_items" Separator=">"></MudBreadcrumbs>
        <MudText Typo="Typo.h2" Class="page-title" GutterBottom="true">Counter 1</MudText>
        <MudText Typo="Typo.body1" Class="mb-2 page-description">This component demonstrates fetching data from the server.</MudText>
    </ShellHeader>

     <ShellBody>
         <MudCard Class="py-4 px-5" Style="min-height: 600px">
            <MudText Class="mb-4">Current count: @currentCount</MudText>
            <MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="IncrementCount">Click me</MudButton>
        </MudCard>
    </ShellBody>
</PageShell>



@code {
    private int currentCount = 1;
    private List<BreadcrumbItem> _items = new List<BreadcrumbItem>
    {
        new BreadcrumbItem("Home", href: "#"),
        new BreadcrumbItem("Link 1", href: "#"),
        new BreadcrumbItem("Link 2", href: null)
    };

    private void IncrementCount()
    {
        currentCount++;
    }
}

